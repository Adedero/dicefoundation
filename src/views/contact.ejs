<!DOCTYPE html>
<html lang="en">
  <%-
    include('./partials/_head', {
      title: 'Mr. Dice - Contact',
      head: null
    })
  %>
  <body class="bg-black text-white"> 
    <%- include('./partials/_header') %>

    <main>

      <section id="hero">
        <div class="section">
          <div data-aos="fade-up" class="flex flex-col items-center justify-center gap-4">
            <h1 class="text-balance title uppercase text-center text-5xl md:text-6xl">Contact</h1>
            <div class="w-[30%] h-[2px] bg-white"></div>
          </div>

          <div class="mt-20 min-h-72 text-center">
            <div>
              <p class="title text-2xl uppercase mb-2">Email address</p>
              <a href="mailto:<%= settings?.emailAddress %>" target="_blank" rel="noopener noreferrer" class="hover:underline text-lg">
                <span class="pi pi-envelope mr-2" style="font-weight: 600; font-size: 0.875rem;"></span>
                <%= settings?.emailAddress %>
              </a>
            </div>

            <div class="mt-10">
              <p class="title text-2xl uppercase mb-2">Social Media Links</p>

              <div class="mt-3">
                <%- include('./partials/_social-medial-links', { size: '1.8rem' }) %>
              </div>
            </div>
          </div>
        </div>
      </section>


      <%- include('./partials/_footer') %>
    </main>
    <%- include("./partials/_scripts") %>
  </body>
</html>