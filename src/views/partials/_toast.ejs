<% if (info_msg.length || success_msg.length || error_msg.length) { %>
  <div class="fixed z-[100] pointer-events-none top-0 right-0 h-dvh w-dvw max-w-[22rem] overflow-y-auto py-4 pr-4 flex flex-col gap-5 *:flex-shrink-0">
    <% if (info_msg) { %>
      <% info_msg.forEach((msg) => { %>
        <div class="alert info w-full show pointer-events-auto">
          <div class="alert p-2 border border-blue-400 bg-blue-500/50 backdrop-blur-md rounded-md text-white">
            <div class="flex items-start gap-1.5">
              <span class="material-symbols-rounded text-blue-300" style="font-size: 1.2rem">info</span>
              <p class="text-sm text-blue-100">
                <%= msg %>
              </p>
              <button class="cursor-pointer ml-auto">
                <span class="alert-close-btn material-symbols-rounded text-blue-300 transition hover:text-blue-200" style="font-size: 1.4rem">close</span>
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  
    <% if (success_msg) { %>
      <% success_msg.forEach((msg) => { %>
        <div class="alert success w-full show pointer-events-auto">
          <div class="p-2 border border-green-400 bg-green-500/50 backdrop-blur-md rounded-md text-white">
            <div class="flex items-start gap-1.5">
              <span class="material-symbols-rounded text-green-300" style="font-size: 1.2rem">check_circle</span>
              <p class="text-sm text-green-100">
                <%= msg %>
              </p>
              <button class="cursor-pointer ml-auto">
                <span class="alert-close-btn material-symbols-rounded text-green-300 transition hover:text-green-200" style="font-size: 1.4rem">close</span>
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
    
    <% if (error_msg) { %>
      <% error_msg.forEach((msg) => { %>
        <div class="alert error w-full show pointer-events-auto">
          <div class="p-2 border border-red-400 bg-red-500/50 backdrop-blur-md rounded-md text-white">
            <div class="flex items-start gap-1.5">
              <span class="material-symbols-rounded text-red-300" style="font-size: 1.2rem">cancel</span>
              <p class="text-sm text-red-100">
                <%= msg %>
              </p>
              <button class="cursor-pointer ml-auto">
                <span class="alert-close-btn material-symbols-rounded text-red-300 transition hover:text-red-200" style="font-size: 1.4rem">close</span>
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
<% } %>