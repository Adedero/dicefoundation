<div class="section overflow-hidden">
  <div class="flex flex-col items-center justify-center gap-4">
    <h1 class="text-balance title uppercase text-center text-5xl md:text-6xl">Featured Works</h1>
    <div class="w-[40%] h-[2px] bg-white"></div>
    <a href="/books" class="text-2xl text-center title uppercase hover:underline">See all books</a>
  </div>

  <div class="mt-16 w-full grid gap-10">
    <% pageData.featuredBooks.forEach((book, index) => { %>
      <div class="w-full grid md:grid-cols-2 gap-10 items-center">
        <div data-aos="<%= index % 2 === 0 ? 'fade-right' : 'fade-left' %>" class="md:order-2">
          <div class="w-full bg-slate-900 rounded-lg h-96 overflow-hidden border">
            <img src="<%= book.coverImage %>" alt="<%= book.title %>" class="w-full h-full object-cover">
          </div>
        </div>
    
        <div data-aos="<%= index % 2 === 0 ? 'fade-left' : 'fade-right' %>" data-aos-delay="200" class="md:order-1">
          <h1 class="title text-3xl md:text-4xl uppercase">
            <%= book.title %>
          </h1>
          <p class="mt-2">
            <%= book.description %>
          </p>
          <a href="/books/<%= book.slug %>">
            <button class="btn primary mt-4">Details</button>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>